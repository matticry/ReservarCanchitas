@model Agenda.Models.Dto.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">   
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true"/>
    <title>Login</title>
    

</head>
<body>
<div class="home-link">
    <svg xmlns="http://www.w3.org/2000/svg" width="26" height="16" viewBox="0 0 26 16" fill="none">
        <path d="M0.292892 7.29289C-0.0976315 7.68342 -0.0976315 8.31658 0.292892 8.70711L6.65685 15.0711C7.04738 15.4616 7.68054 15.4616 8.07107 15.0711C8.46159 14.6805 8.46159 14.0474 8.07107 13.6569L2.41421 8L8.07107 2.34315C8.46159 1.95262 8.46159 1.31946 8.07107 0.928932C7.68054 0.538408 7.04738 0.538408 6.65685 0.928932L0.292892 7.29289ZM26 7L1 7V9L26 9V7Z" fill="white"/>
    </svg>
    <a href="/Home/Index">Home</a>
</div>
	
<form asp-action="Login" method="post">
  
  <div class="container">
    <h3>Iniciar Sesion</h3>
    <br>
    <label asp-for="Username"><b>Usuario</b></label>
    <input type="text" asp-for="Username" placeholder="Escriba su usuario">
            <div class="msg">
            <span class="err" asp-validation-for="Username"></span>
            </div>

            

    <label asp-for="Password"><b>Password</b></label>
   <input  type="password" asp-for="Password" placeholder="Escriba su Contraseña">
            <div class="msg">
            <span asp-validation-for="Password" class="err"></span>
            </div>


    @if(TempData["msg"]!=null){
                <div class="msg">@TempData["msg"]</div>
    }

    <button type="submit">Iniciar Sesion</button>
    <br>
    <br>
    <div class="register-section">
        <h4>¿No tienes cuenta?</h4>
        <a class="text-alert text-center" href="/UserAuthentication/Registration"> Registrate Aqui</a>
    </div>
  </div>
</form>

</body>
</html>